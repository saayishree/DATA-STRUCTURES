{
clrscr();
int arr[100],n,i,k,r;
cout<<"\n ENTER THE NO OF ELEMENTS:";
cin>>n;
cout<<"\n ENTER ARRAY ELEMENTS:";

for(i=0;i<n;i++)
 cin>>arr[i];

cout<<"\n ENTER THE NO OF ROTATIONS:";
cin>>r;

k=1;
int temp;
while(k<=r)
{
 temp=arr[0];
 for(i=0;i<n;i++)
   arr[i]=arr[i+1];
 arr[n-1]=temp;
 k++;
}

cout<<"\n PRINT AFTER ROTATION:\n";
for(i=0;i<n;i++)
 cout<<arr[i]<<" ";

getch();
}

